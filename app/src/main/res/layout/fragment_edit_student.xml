<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".EditStudentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_nama_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:contentDescription="Nama Mahasiswa"
                android:hint="@string/nama"
                android:importantForAutofill="no"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nim_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:contentDescription="NIM Mahasiswa"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/nim"
                android:importantForAutofill="no"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nama_edit"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_kelas_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="Kelas Mahasiswa"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/kelas"
                android:importantForAutofill="no"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nim_edit"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_nilai_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="Total Nilai Tugas"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/nilai_t"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_nilai_t_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_nilai_t_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_nilai_a1"
                android:contentDescription="Total Nilai Assesment 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/nilai_a1"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_nilai_a1_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_nilai_a1_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_nilai_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:contentDescription="Total Nilai Assesment 2"
                android:paddingRight="8dp"
                android:text="@string/nilai_a2"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_nilai_a2_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_nilai_a2_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_nilai_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:contentDescription="Total Nilai Assesment 3"
                android:paddingRight="8dp"
                android:text="@string/nilai_a3"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/et_nilai_a3_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_nilai_a3_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_nilai_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/nilai_p"
                android:textSize="18sp"
                android:contentDescription="Total Nilai Praktikum"
                app:layout_constraintBottom_toBottomOf="@+id/et_nilai_p_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_nilai_p_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_presensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/presensi"
                android:textSize="18sp"
                android:contentDescription="Total Presensi"
                app:layout_constraintBottom_toBottomOf="@+id/et_presensi_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/et_presensi_edit"
                app:layout_constraintVertical_bias="0.100000024"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nilai_t_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nilai_t"
                app:layout_constraintTop_toBottomOf="@+id/et_kelas_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nilai_a1_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nilai_a1"
                app:layout_constraintTop_toBottomOf="@+id/et_nilai_t_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nilai_a2_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nilai_a2"
                app:layout_constraintTop_toBottomOf="@+id/et_nilai_a1_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nilai_a3_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nilai_a3"
                app:layout_constraintTop_toBottomOf="@+id/et_nilai_a2_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_nilai_p_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_nilai_p"
                app:layout_constraintTop_toBottomOf="@+id/et_nilai_a3_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <EditText
                android:id="@+id/et_presensi_edit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:autofillHints="0"
                android:ems="10"
                android:gravity="end"
                android:hint="@string/zero"
                android:inputType="numberDecimal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_presensi"
                app:layout_constraintTop_toBottomOf="@+id/et_nilai_p_edit"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

            <CheckBox
                android:id="@+id/cb_selesai"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:button="@null"
                android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/kuliah_selesai"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_presensi_edit"
                tools:visibility="visible"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple" />

            <TextView
                android:id="@+id/tv_perintah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/perintah_edit"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/rg_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rg_edit"
                tools:visibility="visible"
                android:contentDescription="Perintah Edit"
                android:layout_marginLeft="16dp" />

            <RadioGroup
                android:id="@+id/rg_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tv_perintah"
                app:layout_constraintTop_toBottomOf="@+id/cb_selesai"
                tools:visibility="visible"
                android:layout_marginRight="16dp">

                <RadioButton
                    android:id="@+id/rb_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableEnd="@drawable/ic_update_black_24dp"
                    android:padding="2dp"
                    android:text="@string/update"
                    android:contentDescription="Update"
                    tools:visibility="visible"
                    android:drawableRight="@drawable/ic_update_black_24dp" />

                <RadioButton
                    android:id="@+id/rb_delete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:drawableEnd="@drawable/ic_delete_black_24dp"
                    android:padding="2dp"
                    android:text="@string/delete"
                    tools:visibility="visible"
                    android:contentDescription="Delete"
                    android:drawableRight="@drawable/ic_delete_black_24dp" />
            </RadioGroup>

            <Button
                android:id="@+id/btn_hitung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/hitung"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/divider"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="Hitung Nilai"
                app:layout_constraintTop_toTopOf="@+id/divider"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_edit"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/reset"
                android:contentDescription="Reset Nilai"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorText"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toTopOf="@+id/divider"
                tools:visibility="visible" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:visibility="gone" />

            <View
                android:id="@+id/divider_v"
                android:layout_width="1dp"
                android:layout_height="144dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_judul_nilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/nilai"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/divider_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/divider_v"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_judul_indeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@string/indeks"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_v"
                app:layout_constraintTop_toTopOf="@+id/divider_v"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_nilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/divider_v"
                app:layout_constraintEnd_toStartOf="@+id/divider_v"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_nilai"
                app:layout_constraintVertical_bias="0.0"
                tools:text="N/A"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/tv_indeks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="64sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/divider_v"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider_v"
                app:layout_constraintTop_toBottomOf="@+id/tv_judul_indeks"
                app:layout_constraintVertical_bias="0.0"
                tools:text="N/A"
                tools:visibility="gone" />


            <Button
                android:id="@+id/btn_saran"
                android:layout_width="124dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:text="Lihat Saran"
                android:textColor="@color/colorText"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_nilai"
                app:layout_constraintVertical_bias="0.0"
                tools:visibility="gone" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="124dp"
                android:layout_height="51dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"

                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimary"
                android:text="Share"
                android:textColor="@color/colorText"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.69"
                app:layout_constraintStart_toEndOf="@+id/btn_saran"
                app:layout_constraintTop_toBottomOf="@+id/tv_indeks"
                app:layout_constraintVertical_bias="0.0"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>